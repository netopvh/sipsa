@model Erro
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Erro</h1>
<h2 class="text-danger">Xiii deu ruim enquanto processava sua solicitação.</h2>

@if (Model.MostrarRequisicaoId)
{
    <p>
        <strong>Requisição ID:</strong> <code>@Model.RequisicaoId</code>
    </p>
}

<p>
    No modo desenvolvedor vai mostrar mais detalhes sobre o erro.
</p>

